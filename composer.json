{
    "name": "expenselogger/expenselogger",
    "description": "Personal Expense Tracker - Standalone Desktop Application",
    "type": "project",
    "license": "MIT",
    "homepage": "https://github.com/yahaiz/expense-logger",
    "keywords": [
        "expense",
        "tracker",
        "finance",
        "personal",
        "desktop",
        "php",
        "sqlite",
        "electron"
    ],
    "authors": [
        {
            "name": "Yahya Izadi",
            "email": "yahyaa84iz@gmail.com",
            "homepage": "https://github.com/yahaiz/expense-logger"
        }
    ],
    "support": {
        "issues": "https://github.com/yahaiz/expense-logger/issues",
        "source": "https://github.com/yahaiz/expense-logger"
    },
    "require": {
        "php": ">=8.2",
        "monolog/monolog": "^3.0",
        "symfony/rate-limiter": "^6.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "phpstan/phpstan": "^1.10"
    },
    "autoload": {
        "psr-4": {
            "ExpenseLogger\\": "src/"
        },
        "files": [
            "config/init.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "ExpenseLogger\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test:coverage": "phpunit --coverage-html coverage",
        "phpstan": "phpstan analyse",
        "post-install-cmd": [
            "echo 'ExpenseLogger installed successfully!'"
        ],
        "post-update-cmd": [
            "echo 'ExpenseLogger updated successfully!'"
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true,
        "allow-plugins": {
            "php-http/discovery": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}